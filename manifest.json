{
    "manifest_version": 2,

    "name": "Annoyingcat",
    "description": "This extension shows an annoying cat on every page",
    "version": "1.0",

    "browser_action": {
        "default_icon": "/images/offfixed.png",
        "default_title": "No cats here!"
    },


    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ],


    "background": {
        "scripts": ["background.js"]
    },


    "content_scripts": [{
        "css": ["styles.css"],
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }]
}
